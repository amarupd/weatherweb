<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>
<body>
    {{>navbar}}

    <!-- main header -->

  <div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          
          <div class="main_content">
            <form class="temp_form">
                <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                <input type="submit" value="search" id="submitBtn">
            </form>
          </div>
          <div class="tempInfo">
            <div class="top_layer">
                <p id="days">Monday</p>
                <p id="todayDate">7 Dec</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get Result Here</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_val">0</span><sup> o</sup> C</p>
                    <p id="temp_status"><i class="fa fa-cloud"></i></p>
                </div>
            </div>
          </div>
        </div>
    </div>
  </div>

  <!-- footer -->
  {{>footer}}
  <script src="js/main.js"></script>
  <script>
    const getCurrentDay=()=>
    {
      const weekday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
      const d = new Date();
      let day = weekday[d.getDay()];
      document.getElementById("days").innerHTML = day;  
    }
    getCurrentDay();
      const d = new Date();
      let date = d.getDate();
      const month = ["January","February","March","April","May","June","July","August","September","October","November","December"];
      let name = month[d.getMonth()];
      let don=`${date} ${name}`;
      document.getElementById("todayDate").innerHTML = don;
  </script>
</body>
</html>